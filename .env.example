NODE_ENV=development
PORT=5000

DATABASE_URL="postgresql://<db_user>:<db_password>@<db_host>:5432/<db_name>?schema=public"

JWT_ACCESS_SECRET="replace_with_min_16_char_secret"
JWT_REFRESH_SECRET="replace_with_min_16_char_secret"
ACCESS_TOKEN_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="7d"
PASSWORD_RESET_SECRET="replace_with_min_16_char_secret"
PASSWORD_RESET_TOKEN_EXPIRES_IN="10m"
PASSWORD_RESET_OTP_EXPIRES_MINUTES=10
PUBLIC_BASE_URL="https://your-public-domain-or-ngrok-url"
CORS_ORIGIN="http://localhost:5173"
TRUST_PROXY=1
SWAGGER_ENABLED="true"
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX=5

REDIS_URL="redis://localhost:6380"

# SMTP (required in production for real password reset emails)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="your-email@gmail.com"
